<br>
<center>
<div class="container"
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h1><%= @wiki.title %></h1><small>submitted <%= time_ago_in_words(@wiki.created_at) %> ago by <%= link_to @wiki.user.username, user_path(@wiki.user), class: 'rq-link' %>.</small>
      <br><br>
      <%= link_to "", wikis_path, class: 'glyphicon glyphicon-arrow-left rq-link' %>
      <br><br>
      <p><%= @wiki.body %></p>
      <br>
      <% if user_is_authorized_for_wiki?(@wiki) %>
        <%= link_to "edit", edit_wiki_path(@wiki), class: 'ghost-button' %>
        <%= link_to "delete", @wiki, method: :delete, class: 'ghost-button-del', data: {confirm: 'Are you sure you want to delete this wiki?'} %>
      <% end %>
    </div>
  </div>
</div>
</center>
